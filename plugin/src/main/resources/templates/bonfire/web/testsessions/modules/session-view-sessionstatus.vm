<div id="session-status">
    <ol class="aui-progress-tracker" style="width: 100%;">
        <li class="aui-progress-tracker-step #if($session.isCreated()) aui-progress-tracker-step-current #end"><span>
            $i18n.getText('session.status.pretty.created')
        </span></li>
        <li class="aui-progress-tracker-step #if(!$session.isComplete() && !$session.isCreated()) aui-progress-tracker-step-current #end"><span>
            $session.getSessionStatusPretty()
        </span></li>
        <li class="aui-progress-tracker-step #if($session.isComplete()) aui-progress-tracker-step-current #end"><span>
            #if(!$session.isComplete())
                $i18n.getText('session.status.pretty.desired.complete')
            #else
                $i18n.getText('session.status.pretty.completed')
            #end
        </span></li>
    </ol>
</div>