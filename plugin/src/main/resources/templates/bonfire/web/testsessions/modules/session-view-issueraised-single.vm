<div class="raised-issue" class="mod-content">
    #set( $key = $issue.getKey() )
    <ul class="bf-issue-list">
        ##Stupid inline-blocks can't have line breaks between li's
        <li class="bf-icon">
            #displayConstantIcon(${issue.issueTypeObject})
        </li><li class="bf-key #if($issue.resolved) bf-issue-done #end">
            <a href="$requestContext.baseUrl/browse/$key">$key</a>
        </li><li class="bf-data">
            <span>$textutils.htmlEncode($issue.getSummary())</span>
        </li>#if($issue.canUnraiseInSession)<li class="bf-icon">
            <a class="bf-delete-raised-in" href="$baseurl/rest/bonfire/1.0/sessions/$session.id/raisedin/$issue.key" title="$i18n.getText('bonfire.webpanel.menu.button.remove')">
                <img class="bf-unraise-icon" height="16" width="16" src="$baseurl/download/resources/com.atlassian.bonfire.plugin/images/icons/cross_grey_16.png">
            </a>
        </li>#end
    </ul>
</div>
