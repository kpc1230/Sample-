<h1 class="dialog-title">$i18n.getText('session.pause.title')</h1>
<form class="aui" action="$requestContext.baseUrl/secure/ActivateInSession.jspa?sessionId=$action.htmlEncode($requestContext.getRequestParameter("testSessionId"))&isDialog=true" method="post">
    <div class="form-body">
        $action.auiErrorsHTML()
        <div class="form-description">
            <p>
                $i18n.getText('participant.removal.warning.pause')
            </p>
        </div>
    </div>
    <div class="buttons-container form-footer">
        <div class="buttons">
            <input id="ex-submit" type="submit" class="aui-button aui-button-primary" value="Pause">
            <a href="#close" class="cancel">Close</a>
        </div>
    </div>
    <input type="hidden" name="atl_token" value="${xsrfToken}"/>
</form>