<h1 class="dialog-title">$i18n.getText('session.ops.button.clone')</h1>
<form class="aui" action="$requestContext.baseUrl/secure/CloneSessionPost.jspa?testSessionId=$action.htmlEncode(${requestContext.getRequestParameter("testSessionId")})" method="post">
    <div class="form-body">
        $action.auiErrorsHTML()
        <div class="aui-message info">
            <span class="aui-icon icon-info"></span>
            <span>$i18n.getText('session.clone.message')</span>
        </div>
        <div class="field-group">
            <label for="ex-session-name">$i18n.getText('session.cud.field.name')<span class="aui-icon icon-required"></span><span class="content">$i18n.getText('session.cud.field.required')</span></label>
            <input type="text" class="text" id="ex-session-name" name="name" value="$action.htmlEncode($action.name)" tabindex="2"/>
        </div>
    </div>
    <div class="buttons-container form-footer">
        <div class="buttons">
            <input id="ex-submit" type="submit" class="aui-button aui-button-primary" value="Clone" tabindex="3">
            <a href="#close" class="cancel">Close</a>
        </div>
    </div>
    <input type="hidden" name="atl_token" value="${xsrfToken}"/>
</form>