<h1 class="dialog-title">$i18n.getText('session.assign.title')</h1>
<form class="aui" action="$requestContext.baseUrl/secure/AssignSessionPost.jspa?testSessionId=$action.htmlEncode(${requestContext.getRequestParameter("testSessionId")})" method="post">
    <div class="form-body">
        $action.auiErrorsHTML()
        #if($action.hasActiveParticipants)
            <div class="warning">
                <span>$i18n.getText('participant.removal.warning.assign')</span>
            </div>
        #end
        <div class="field-group">
            <label for="ex-assignee">$i18n.getText('session.cud.field.assignee')</label>
            <input class="text" id="ex-assignee" name="assignee" data-project-key="$action.htmlEncode($action.projectKey)" tabindex="2"/>
        </div>
    </div>
    <div class="buttons-container form-footer">
        <div class="buttons">
            <input id="ex-submit" type="submit" class="aui-button aui-button-primary" value="Assign" tabindex="3">
            <a href="#close" class="cancel">Close</a>
        </div>
    </div>
    <input type="hidden" name="atl_token" value="${xsrfToken}"/>
</form>